<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Header -->
    <TextView
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:padding="8dp"
        android:text="Selamat datang, user"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Tombol Profile dan Logout -->
    <LinearLayout
        android:id="@+id/top_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/header_title"
        android:layout_alignParentEnd="true"
        android:padding="8dp"
        android:gravity="end">

        <!-- Tombol Profil -->
        <Button
            android:id="@+id/btn_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:text="PROFIL"
            android:textColor="#000000"
            android:padding="4dp"
            android:textSize="12sp" />

        <!-- Tombol Logout -->
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:text="KELUAR"
            android:textColor="#000000"
            android:padding="4dp"
            android:layout_marginStart="8dp"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Side Menu -->
    <LinearLayout
        android:id="@+id/side_menu"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_below="@id/header_title"
        android:background="#000000"
        android:orientation="vertical"
        android:padding="8dp">

        <Button
            android:id="@+id/button_beranda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:text="Beranda"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/button_bpnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:text="Bantuan Pangan Non Tunai"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/button_disabilitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:text="Bantuan Disabilitas"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/button_anak_yatim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:text="Bantuan Anak Yatim Piatu"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Kotak Merah untuk Konten -->
    <FrameLayout
        android:id="@+id/form_container_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/side_menu"
        android:layout_below="@id/top_buttons"
        android:layout_margin="8dp">
        />

    </FrameLayout>
</RelativeLayout>
